@inherits CompanyDetailsBase

@if (Company != null)
{
    <section class="pt-5 pb-5">
        <div class="container">
            <div class="row">
                <div class="col-md-2">
                    <a href="#" class="col-3">
                        <img src="@Company.LogoUrl" alt="@Company.LogoUrl" width="120" height="120"/>
                    </a>
                </div>
                <div class="col-md-10">
                    <div class="row">
                        <div class="ml-3 title">@Company.Name</div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="text-muted mb-1">Country: @Company.Location.ToUpper()</div>
                        </div>
                        <div class="col-md-9">
                            <div class="text-muted mb-1">Description: @Company.Description</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="text-muted mb-1">Market: @Company.Equity</div>
                        </div>
                        <div class="col-md-9">
                            <div class="text-muted mb-1">Number of Employees: @Company.TotalEmployees</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<style>
    .title {
        font-size: 30px;
        padding-bottom: 10px;
        font-weight: bold;
    }
</style>